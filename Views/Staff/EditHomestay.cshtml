@model DoAnCoSo_Nhom2.Models.Homestay

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh sửa Homestay</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            background: linear-gradient(135deg, #e8eff5, #b3cde0) !important;
            padding-top: 50px;
            color: #2c3e50;
            font-family: 'Montserrat', sans-serif;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            padding: 30px;
            max-width: 900px;
            margin: 0 auto;
        }

            .form-container h2 {
                font-size: 28px;
                font-weight: 700;
                color: #e67e22;
                text-align: center;
                margin-bottom: 20px;
                text-transform: uppercase;
            }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
        }

        .form-control, .form-check-input {
            border-radius: 10px;
            border: 2px solid #3498db;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #2980b9;
                box-shadow: 0 0 5px rgba(52, 152, 219, 0.3);
            }

        .btn-warning {
            background: #e67e22;
            border: none;
            color: #ffffff;
            font-weight: 600;
            border-radius: 10px;
            padding: 10px 20px;
            transition: background 0.3s ease;
        }

            .btn-warning:hover {
                background: #d35400;
            }

        .btn-secondary {
            background: #26a69a;
            color: #ffffff;
            border: none;
            font-weight: 600;
            border-radius: 10px;
            padding: 10px 20px;
            transition: background 0.3s ease;
        }

            .btn-secondary:hover {
                background: #00897b;
            }

        .alert-validation {
            border-radius: 10px;
            background-color: #e74c3c;
            color: #ffffff;
            padding: 15px;
        }

        .form-check-label {
            color: #2c3e50;
        }

        .form-text {
            color: #2c3e50;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="form-container mt-4">
        <h2>Chỉnh sửa Homestay</h2>
        <form asp-action="EditHomestay" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger alert-validation"></div>
            }

            <div class="mb-3">
                <label class="form-label">Tên Homestay</label>
                <input asp-for="Name" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" id="description" rows="5" required></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Thành phố</label>
                    <input asp-for="City" class="form-control" required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Giá mỗi đêm</label>
                <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Hình ảnh mới (thay thế hình cũ)</label>
                <input type="file" name="images" class="form-control" multiple accept="image/*" />
                <div class="form-text">Giữ phím Ctrl để chọn nhiều ảnh.</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Tiện nghi</label>
                <div class="row">
                    @foreach (var amenity in ViewBag.Amenities)
                    {
                        <div class="col-md-4">
                            <div class="form-check">
                                <input type="checkbox" name="amenityIds" value="@amenity.Id" class="form-check-input"
                                @(Model.HomestayAmenities.Any(ha => ha.AmenityId == amenity.Id) ? "checked" : "") />
                                <label class="form-check-label">@amenity.Name</label>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-warning me-2">
                    <i class="bi bi-save me-2"></i>Cập nhật
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        CKEDITOR.replace('description', {
            height: 200,
            toolbar: [
                { name: 'basicstyles', items: ['Bold', 'Italic', 'Underline', 'Strike'] },
                { name: 'paragraph', items: ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent'] },
                { name: 'styles', items: ['Format', 'Font', 'FontSize'] },
                { name: 'colors', items: ['TextColor', 'BGColor'] }
            ]
        });
    </script>
</body>
</html>