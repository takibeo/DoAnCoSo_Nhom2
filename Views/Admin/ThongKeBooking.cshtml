@model DoAnCoSo_Nhom2.ViewModels.ThongKeBookingViewModel
@using Newtonsoft.Json

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        background: linear-gradient(135deg, #e8eff5, #b3cde0);
        padding-top: 50px;
    }

    h2, h3 {
        font-size: 28px;
        font-weight: bold;
        color: blue !important;
        text-align: center;
        text-transform: uppercase;
    }

    .table th, .table thead {
        background-color: #34495e;
        color: #ffffff;
        vertical-align: middle;
        font-weight: 600;
    }

    .table td {
        background-color: #e8f5e9 !important;
        color: #2c3e50;
        vertical-align: middle;
    }

    .badge {
        font-size: 0.9em;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .btn-secondary {
        background-color: #26a69a;
        color: #ffffff;
        border: none;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #00897b;
        }

    .btn-primary {
        background-color: #e67e22;
        border: none;
        color: #ffffff;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #d35400;
        }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
    }

    .form-control {
        border-radius: 8px;
        border: 2px solid #3498db;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #2980b9;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.3);
        }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .table-responsive {
        margin-top: 30px;
    }

    .text-end {
        text-align: right;
    }

    .card {
        background-color: #ffffff;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        padding: 20px;
        margin-bottom: 30px;
    }

    .table-hover tbody tr:hover {
        background-color: #c8e6c9 !important;
    }

    .section-title {
        margin-bottom: 20px;
    }

    .section-divider {
        border-top: 1px solid #e0e0e0;
        margin: 30px 0;
    }
</style>

<div class="container">
    <!-- Filter Form Section -->
    <div class="card">
        <h2 class="section-title">Thống kê đơn đặt phòng</h2>
        <form method="get" asp-action="ThongKeBooking" class="mb-4">
            <div class="row">
                <div class="col-md-4">
                    <label for="homestayName" class="form-label">Nhập tên Homestay:</label>
                    <input type="text" name="homestayName" id="homestayName" list="homestayList" class="form-control" />
                    <datalist id="homestayList">
                        @foreach (var homestay in ViewBag.Homestays)
                        {
                            <option value="@homestay.Name"></option>
                        }
                    </datalist>
                </div>
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">Từ ngày:</label>
                    <input type="date" name="fromDate" id="fromDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="toDate" class="form-label">Đến ngày:</label>
                    <input type="date" name="toDate" id="toDate" class="form-control" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-filter me-2"></i>Lọc</button>
                </div>
            </div>
        </form>
    </div>

    <div class="section-divider"></div>

    <!-- Status Statistics Section -->
    <div class="card">
        <h3 class="section-title">Thống kê tổng quan</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center table-hover">
                <thead>
                    <tr>
                        <th>Trạng thái</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stat in Model.StatusStatistics)
                    {
                        <tr>
                            <td>@stat.Status</td>
                            <td>@stat.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="section-divider"></div>

    <!-- Revenue Statistics Section -->
    <div class="card">
        <h3 class="section-title">Thống kê doanh thu</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center table-hover">
                <thead>
                    <tr>
                        <th>Tháng</th>
                        <th>Doanh thu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var revenue in Model.RevenueStatistics)
                    {
                        <tr>
                            <td>@revenue.Month</td>
                            <td>@revenue.TotalRevenue.ToString("N0") VND</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="section-divider"></div>

    <!-- Booking Details Section -->
    <div class="card">
        <h3 class="section-title">Chi tiết đơn đặt phòng</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center table-hover">
                <thead>
                    <tr>
                        <th>Khách hàng</th>
                        <th>Homestay</th>
                        <th>Ngày nhận</th>
                        <th>Ngày trả</th>
                        <th>Số khách</th>
                        <th>Giá</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.Bookings)
                    {
                        <tr>
                            <td>@booking.User.FullName</td>
                            <td>@booking.Homestay.Name</td>
                            <td>@booking.CheckInDate.ToString("dd/MM/yyyy")</td>
                            <td>@booking.CheckOutDate.ToString("dd/MM/yyyy")</td>
                            <td>@booking.NumberOfGuests</td>
                            <td>@booking.TotalPrice.ToString("N0") VND</td>
                            <td>
                                @{
                                    var badgeClass = booking.Status switch
                                    {
                                        "Pending" => "bg-warning text-dark",
                                        "Approved" => "bg-success",
                                        _ => "bg-danger"
                                    };
                                }
                                <span class="badge @badgeClass">@booking.Status</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="section-divider"></div>

    <!-- Revenue Chart Section -->
    <div class="card">
        <h3 class="section-title">Biểu đồ doanh thu</h3>
        <div class="card-body">
            <canvas id="revenueChart" height="100"></canvas>
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-end mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('revenueChart').getContext('2d');
            var revenueChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.RevenueStatistics.Select(x => x.Month))),
                    datasets: [{
                        label: 'Doanh thu (VND)',
                        data: @Html.Raw(Json.Serialize(Model.RevenueStatistics.Select(x => x.TotalRevenue))),
                        borderColor: '#e67e22',
                        backgroundColor: 'rgba(230, 126, 34, 0.2)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Doanh thu (VND)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Tháng'
                            }
                        }
                    }
                }
            });
        });
    </script>
}