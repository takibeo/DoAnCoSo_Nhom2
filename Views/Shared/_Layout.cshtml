<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Booking Homestay</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/layout.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background: linear-gradient(135deg, #e8eff5, #b3cde0) !important; /* Matching soft blue-gray gradient */
        }

        .container-fluid {
            flex: 1;
            width: 100%;
            padding-left: 15px;
            padding-right: 15px;
        }

        footer {
            height: auto;
            padding-top: 10px;
            padding-bottom: 10px;
            position: relative;
            background-color: #2c3e50 !important; /* Dark navy footer */
        }

        .navbar-nav .nav-link {
            color: #2c3e50 !important;
        }

            .navbar-nav .nav-link:hover {
                color: #e67e22 !important;
            }

        .messenger-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
            background-color: white; 
            border-radius: 50%;
            padding: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s;
        }

            .messenger-button:hover {
                transform: scale(1.1);
            }

            .messenger-button img {
                width: 40px;
                height: 40px;
            }
    </style>
</head>
<body>
    <header class="layout-header" style="height:122px">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent border-bottom-0 shadow-none mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/homestays/Logo.png" alt="Logo" style="height: 90px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            @await Html.PartialAsync("_AdminMenu")
                        }
                        else if (User.IsInRole("Staff"))
                        {
                            @await Html.PartialAsync("_StaffMenu")
                        }
                        else if (User.IsInRole("Customer"))
                        {
                            @await Html.PartialAsync("_CustomerMenu")
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white pt-3 pb-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <h5>HomeStay GayGo</h5>
                    <p>Công ty trách nhiệm và hữu hạn 3 thành viên.</p>
                </div>
                <div class="col-md-3 mb-3">
                    <h5>Liên Kết</h5>
                    <ul class="list-unstyled">
                        <li class="nav-item"><a class="nav-link text-white" href="#"><i class="bi bi-house"></i> Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="#"><i class="bi bi-info-circle"></i> Chi Tiết</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="#"><i class="bi bi-envelope"></i> Email</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="#"><i class="bi bi-shield-lock"></i> Đăng nhập</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h5>Contact</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-geo-alt-fill"></i> Cầu Thị Nghè , Hẻm 421 , Đối diện tạp hóa cô 4 bán chè</li>
                        <li><i class="bi bi-telephone-fill"></i> +84 898133490</li>
                        <li><i class="bi bi-envelope-fill"></i> gaygohomestay@gmail.com</li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3">
                    <h5>Nền Tảng</h5>
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="https://www.facebook.com/haophan153" class="text-white"><i class="bi bi-facebook fs-4"></i></a></li>
                        <li class="list-inline-item"><a href="https://twitter.com/Nhom2" class="text-white"><i class="bi bi-twitter fs-4"></i></a></li>
                        <li class="list-inline-item"><a href="https://www.instagram.com/haophan_/" class="text-white"><i class="bi bi-instagram fs-4"></i></a></li>
                    </ul>
                </div>
            </div>
            <hr class="bg-light">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="mb-0">© 2025 Thương mại nhà nghỉ . Language is a connection, not a barrier.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Nút Messenger -->
    <a href="https://m.me/617172534821417" target="_blank" class="messenger-button">
        <img src="https://upload.wikimedia.org/wikipedia/commons/b/be/Facebook_Messenger_logo_2020.svg" alt="Messenger" />
    </a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>