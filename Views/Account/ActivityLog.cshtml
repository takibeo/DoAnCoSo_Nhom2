@model List<DoAnCoSo_Nhom2.Models.UserActivityLog>
@{
    ViewData["Title"] = "Lịch sử hoạt động";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            background: linear-gradient(135deg, #e8eff5, #b3cde0) !important; 
            padding-top: 50px;
            color: #2c3e50; 
        }

        .activity-container {
            background-color: #ffffff;
            color: #2c3e50; 
            border-radius: 20px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            padding: 30px;
            max-width: 900px;
            margin: 0 auto;
        }

        h2 {
            font-size: 28px;
            font-weight: 700;
            color: #e67e22;
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
        }

        .table th, .table thead {
            background-color: #34495e; 
            color: #ffffff;
            vertical-align: middle;
            font-weight: 600;
        }

        .table td {
            background-color: #e8f5e9 !important; 
            color: #2c3e50; 
            vertical-align: middle;
        }

        .btn-danger {
            background-color: #e74c3c; 
            border: none;
            border-radius: 10px;
            padding: 6px 14px;
            color: #ffffff; 
            font-weight: 600;
            transition: background 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c0392b; 
            }

        .btn-secondary {
            background-color: #26a69a; 
            border: none;
            border-radius: 10px;
            padding: 6px 14px;
            color: #ffffff; 
            font-weight: 600;
            transition: background 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #00897b; 
            }

        .alert-info {
            font-size: 18px;
            font-weight: 600;
            background-color: #3498db; 
            color: #ffffff; 
            border: none;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
        }

        .table-hover tbody tr:hover {
            background-color: #c8e6c9 !important; 
        }
    </style>
</head>
<body>
    <div class="activity-container">
        <h2>Lịch sử hoạt động</h2>

        @if (Model.Count == 0)
        {
            <div class="alert alert-info text-center mt-3">
                Không có lịch sử hoạt động nào.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover text-center">
                    <thead>
                        <tr>
                            <th>Thời gian</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.Timestamp.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@log.Action</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center mt-4">
                <form asp-action="ClearActivityLog" method="post">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3-fill me-2"></i>Xóa lịch sử
                    </button>
                </form>
            </div>
            <div class="text-end mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>