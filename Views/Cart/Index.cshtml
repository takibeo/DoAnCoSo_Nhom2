@model List<DoAnCoSo_Nhom2.Models.Cart>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ hàng của bạn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            background: linear-gradient(135deg, #e8eff5, #b3cde0) !important;
            padding-top: 50px;
            color: #2c3e50;
        }

        .cart-container {
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            padding: 30px;
            max-width: 1000px;
            margin: 0 auto;
        }

        h2 {
            font-size: 28px;
            font-weight: 700;
            color: #e67e22;
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
        }

        .table th, .table thead {
            background-color: #34495e;
            color: #ffffff;
            vertical-align: middle;
            font-weight: 600;
        }

        .table td {
            background-color: #e8f5e9 !important;
            color: #2c3e50;
            vertical-align: middle;
        }

        .btn-danger {
            background-color: #e74c3c;
            border: none;
            border-radius: 10px;
            padding: 5px 12px;
            color: #ffffff;
            font-weight: 600;
            transition: background 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c0392b;
            }

        .btn-success {
            background-color: #e67e22;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            color: #ffffff;
            padding: 10px 20px;
            transition: background 0.3s ease;
        }

            .btn-success:hover {
                background-color: #d35400;
            }

        .total-deposit {
            font-size: 18px;
            font-weight: 600;
            color: #2c3e50;
        }

            .total-deposit span {
                color: #2ecc71;
            }

        .alert-info {
            font-size: 18px;
            font-weight: 600;
            background-color: #3498db;
            color: #ffffff;
            border: none;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
        }

        .table-hover tbody tr:hover {
            background-color: #c8e6c9 !important;
        }
    </style>
</head>
<body>
    <div class="cart-container">
        <h2>Giỏ hàng của bạn</h2>

        @if (Model.Any())
        {
            decimal totalDeposit = 0;

            <div class="table-responsive">
                <table class="table table-hover table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Tên Homestay</th>
                            <th>Ngày nhận</th>
                            <th>Ngày trả</th>
                            <th>Số khách</th>
                            <th>Tổng giá (VND)</th>
                            <th>Cọc trước (30%)</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var deposit = item.TotalPrice * 0.3M;
                            totalDeposit += deposit;
                            <tr>
                                <td>@item.Homestay.Name</td>
                                <td>@item.CheckInDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.CheckOutDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.NumberOfGuests</td>
                                <td>@item.TotalPrice.ToString("N0")</td>
                                <td class="text-success fw-bold">@deposit.ToString("N0")</td>
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <form asp-controller="Cart" asp-action="Pay" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="bi bi-credit-card me-2"></i>Thanh toán
                                            </button>
                                        </form>
                                    </div>
                                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash me-2"></i>Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <div class="total-deposit">
                    Tổng cọc trước (30%): <span>@totalDeposit.ToString("N0")</span> VND
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center mt-3">
                Giỏ hàng của bạn đang trống.
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>