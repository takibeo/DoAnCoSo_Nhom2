@model List<DoAnCoSo_Nhom2.Models.Booking>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        background: linear-gradient(135deg, #e8eff5, #b3cde0) !important;
        padding-top: 50px;
        color: #2c3e50;
    }

    .booking-container {
        background-color: #ffffff;
        color: #2c3e50;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        padding: 30px;
        max-width: 1000px;
        margin: 0 auto;
    }

    h2 {
        font-size: 28px;
        font-weight: 700;
        color: #e67e22;
        text-align: center;
        margin-bottom: 30px;
        text-transform: uppercase;
    }

    .table th {
        background-color: #34495e;
        color: #ffffff;
        vertical-align: middle;
        font-weight: 600;
    }

    .table td {
        background-color: #e8f5e9 !important;
        color: #2c3e50;
        vertical-align: middle;
    }

    .badge {
        font-size: 0.9em;
        padding: 5px 10px;
        border-radius: 10px;
    }

    .alert-info {
        font-size: 18px;
        font-weight: 600;
        background-color: #3498db;
        color: #ffffff;
        border: none;
        border-radius: 10px;
        padding: 15px;
        text-align: center;
    }

    .btn-secondary {
        background-color: #26a69a;
        color: #ffffff;
        border: none;
        font-weight: 600;
        border-radius: 10px;
        transition: background 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #00897b;
        }

    #bookingTable_wrapper {
        color: #2c3e50;
        font-size: 16px;
    }

    .dataTables_length label,
    .dataTables_filter label,
    .dataTables_info,
    .dataTables_paginate {
        color: #2c3e50 !important;
        font-size: 16px;
    }

        .dataTables_length select,
        .dataTables_filter input,
        .dataTables_paginate a {
            font-size: 16px !important;
            color: #2c3e50 !important;
            background-color: #ffffff !important;
            border: 2px solid #3498db !important;
            border-radius: 6px;
            padding: 4px 8px;
            margin: 2px;
        }

        .dataTables_paginate .paginate_button {
            padding: 6px 12px;
            margin: 2px;
        }

            .dataTables_paginate .paginate_button:hover {
                background-color: #3498db !important;
                color: #ffffff !important;
                border: 2px solid #2980b9 !important;
            }

    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
        background-color: #e67e22 !important;
        color: #ffffff !important;
        border: 2px solid #d35400 !important;
    }

    .table-hover tbody tr:hover {
        background-color: #c8e6c9 !important;
    }
</style>

<div class="booking-container">
    <h2>Lịch sử đặt phòng</h2>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table id="bookingTable" class="table table-hover table-bordered text-center">
                <thead>
                    <tr>
                        <th>Homestay</th>
                        <th>Check-in</th>
                        <th>Check-out</th>
                        <th>Trạng thái</th>
                        <th>Thời gian cập nhật</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Homestay.Name</td>
                            <td>@order.CheckInDate.ToString("dd/MM/yyyy")</td>
                            <td>@order.CheckOutDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge
                                    @(order.Status == "Confirmed" ? "bg-success" :
                                      order.Status == "Cancelled" ? "bg-danger" : "bg-warning")">
                                    @order.Status
                                </span>
                            </td>
                            <td>
                                @(order.UpdatedAt != DateTime.MinValue
                                    ? order.UpdatedAt.ToString("HH:mm dd/MM/yyyy")
                                    : "Chưa cập nhật")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-3">
            Bạn chưa có lịch sử đặt phòng.
        </div>
    }

    <div class="text-end mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#bookingTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json'
                },
                pageLength: 10
            });
        });
    </script>
}